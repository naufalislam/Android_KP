<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView

        android:elevation="@dimen/_3sdp"
        app:cardCornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <TextView
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:text="History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/_9sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:elevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:textSize="@dimen/_9sdp"
                    android:id="@+id/detail_pembayaran"
                    android:text="Detail Pembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="9dp"
                    android:id="@+id/harga"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_below="@+id/detail_pembayaran"
                    android:text="Rp. 29.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_motor"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp" />

                <ImageView

                    android:id="@+id/ic_lokasi"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_margin="@dimen/_9sdp"
                    android:layout_below="@+id/harga"
                    android:background="@drawable/ic_lokasi"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/lokasi"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_lokasi"
                    android:layout_below="@id/harga"
                    android:text="Lokasi Anda Saat Ini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lokasi_anda"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_lokasi"
                    android:layout_below="@id/lokasi"
                    android:text="Jalan Warigalit II,Kota Semarang,"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:elevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    android:textAlignment="center"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_below="@+id/ic_lokasi"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_25sdp">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:text="Konfirmasi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:elevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:textSize="@dimen/_9sdp"
                    android:id="@+id/detail_pembayaran1"
                    android:text="Detail Pembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="9dp"
                    android:id="@+id/harga1"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_below="@+id/detail_pembayaran1"
                    android:text="Rp. 29.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_mobil"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp" />

                <ImageView

                    android:id="@+id/ic_lokasi1"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_margin="@dimen/_9sdp"
                    android:layout_below="@+id/harga1"
                    android:background="@drawable/ic_lokasi"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/lokasi1"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_lokasi1"
                    android:layout_below="@id/harga1"
                    android:text="Lokasi Anda Saat Ini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lokasi_anda1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_lokasi1"
                    android:layout_below="@id/lokasi1"
                    android:text="Jalan Warigalit II,Kota Semarang,"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:elevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    android:textAlignment="center"
                    app:cardBackgroundColor="@color/colororange"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_below="@+id/ic_lokasi1"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_25sdp">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:text="Lunas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:elevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:textSize="@dimen/_9sdp"
                    android:id="@+id/detail_pembayaran2"
                    android:text="Detail Pembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="9dp"
                    android:id="@+id/harga2"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_below="@+id/detail_pembayaran2"
                    android:text="Rp. 29.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_mobil"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp" />

                <ImageView

                    android:id="@+id/ic_lokasi2"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:layout_margin="@dimen/_9sdp"
                    android:layout_below="@+id/harga2"
                    android:background="@drawable/ic_lokasi"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/lokasi2"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_lokasi2"
                    android:layout_below="@id/harga2"
                    android:text="Lokasi Anda Saat Ini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lokasi_anda2"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toEndOf="@+id/ic_lokasi2"
                    android:layout_below="@id/lokasi2"
                    android:text="Jalan Warigalit II,Kota Semarang,"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:elevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    android:textAlignment="center"
                    app:cardBackgroundColor="@color/colororange"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_below="@+id/lokasi_anda2"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_25sdp">

                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:text="Lunas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>