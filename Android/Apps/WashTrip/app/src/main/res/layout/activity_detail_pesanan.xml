<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPesanan">

    <ImageView
        android:id="@+id/gambar"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_motor_2"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_150sdp" />

    <TextView
        android:id="@+id/text1"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_below="@+id/gambar"
        android:text="WashTrip Segera Datang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text2"
        android:textSize="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/text1"
        android:text=" Ut enim ad minim veniam, quis nostrud\nexercitation ullamco laboris nisi ut\naliquip ex ea commodo consequat. \nDuis aute irure dolor in reprehenderit in voluptate \nvelit esse cillum dolore eu fugiat nulla pariatur. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/order"
        android:onClick="bayar"
        android:elevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_below="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp">

        <TextView
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="History"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </androidx.cardview.widget.CardView>






</RelativeLayout>