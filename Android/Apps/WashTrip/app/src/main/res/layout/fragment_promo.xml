<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:elevation="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginBottom="@dimen/_6sdp"
            android:id="@+id/washtrip"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:background="@drawable/ic_washtrip_blue"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_40sdp" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_12sdp"
                android:elevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/promo1"
                    android:background="@drawable/bg_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:textStyle="bold"
                    android:layout_below="@+id/promo1"
                    android:text="Potongan Harga 25% Pengguna\nPertama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_below="@+id/text1"
                        android:text="Berlaku Hingga 31 Desember 2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/button1"
                        android:elevation="@dimen/_3sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_below="@+id/promo1"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="25dp">

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:text="Gunakan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </androidx.cardview.widget.CardView>



                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_12sdp"
                android:elevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <ImageView
                        android:id="@+id/promo2"
                        android:background="@drawable/bg_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textColor="#000000"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:textStyle="bold"
                        android:layout_below="@+id/promo2"
                        android:text="Potongan Harga 25% Pengguna\nPertama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_below="@+id/text2"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="Berlaku Hingga 31 Desember 2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/button2"
                        android:elevation="@dimen/_3sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_below="@+id/promo2"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="25dp">

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:text="Gunakan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:elevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <ImageView
                        android:id="@+id/promo3"
                        android:background="@drawable/bg_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textColor="#000000"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:textStyle="bold"
                        android:layout_below="@+id/promo3"
                        android:text="Potongan Harga 25% Pengguna\nPertama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_below="@+id/text3"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:text="Berlaku Hingga 31 Desember 2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <androidx.cardview.widget.CardView
                        android:id="@+id/button3"
                        android:elevation="@dimen/_3sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_below="@+id/promo3"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="25dp">

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:text="Gunakan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>