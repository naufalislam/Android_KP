<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/washtrip"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:background="@drawable/ic_washtrip_blue"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_35sdp" />


    <ScrollView
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/washtrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">





                <ImageView
                    android:id="@+id/icon_home"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:background="@drawable/ic_home"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp" />
                <TextView
                    android:id="@+id/lokasi_anda"
                    android:textSize="@dimen/_10sdp"
                    android:text="Lokasi Anda"

                    android:layout_marginLeft="@dimen/_75sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lokasi"
                    android:textColor="#000000"
                    android:textSize="@dimen/_11sdp"
                    android:text="Jl. Warigalit Dalam  III No 7"
                    android:layout_marginLeft="@dimen/_75sdp"
                    android:layout_below="@+id/lokasi_anda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:elevation="@dimen/_3sdp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_below="@+id/lokasi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                app:cardCornerRadius="@dimen/_6sdp">

                <ImageView
                    android:background="@drawable/bg_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/cardview"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Kategori Layanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_3sdp"
                        android:elevation="@dimen/_3sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp">

                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/mobil"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/ic_mobil"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp" />

                            <TextView
                                android:id="@+id/cuci_mobil"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/mobil"
                                android:text="Cuci Mobil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:textSize="@dimen/_7sdp"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/cuci_mobil"
                                android:text="Cuci Interior, exterior\nwar, kaca, dan mesin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>




                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_3sdp"
                        android:elevation="@dimen/_3sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp">

                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/motor"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/ic_motor"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp" />

                            <TextView
                                android:id="@+id/cuci_motor"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/motor"
                                android:text="Cuci Motor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginLeft="@dimen/_1sdp"
                                android:textSize="@dimen/_7sdp"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/cuci_motor"
                                android:text="Cuci Body, velg, ban\nbagian bawah, dan\nsemir ban motor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>




                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:elevation="@dimen/_3sdp"

                        android:layout_margin="@dimen/_3sdp"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp">

                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/torent"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/ic_torn"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp" />

                            <TextView
                                android:id="@+id/cuci_torent"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/torent"
                                android:text="Cuci Mobil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:textSize="@dimen/_7sdp"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/cuci_torent"
                                android:text="Cuci Interior, exterior\nwar, kaca, dan mesin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Kategori Layanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:elevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <ImageView
                            android:id="@+id/cardview_kategori"
                            android:background="@drawable/bg_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130sdp" />

                        <TextView
                            android:textColor="#000000"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:textStyle="bold"
                            android:layout_below="@+id/cardview_kategori"
                            android:text="Potongan Harga 25% Pengguna\nPertama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <androidx.cardview.widget.CardView
                            android:elevation="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/cardview_kategori"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_25sdp">

                            <TextView
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold"
                                android:text="Gunakan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </androidx.cardview.widget.CardView>



                    </RelativeLayout>



                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>